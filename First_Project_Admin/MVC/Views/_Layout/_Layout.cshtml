<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>
    <header>
        <!-- Header içeriği burada yer alır -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">Anasayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="AddAdmin">Admin Ekle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="DeleteAdmin">Admin Çıkar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="UpdateAdmin">Admin Güncelle</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="GetAdmins">Adminleri Getir</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminDashboard" asp-action="GetAdmin">Admin Getir</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block">
                <!-- Sidebar içeriği -->
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="AdminDashboard" asp-action="Index">
                                Anasayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="AddAdmin">
                                Admin Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="DeleteAdmin">
                                Admin Çıkar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="UpdateAdmin">
                                Admin Güncelle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="GetAdmins">
                                Adminleri Getir
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="GetAdmin">
                                Admin Getir
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Boş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Boş
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
                <br />
                <br />
                <br />
                <!-- Diğer içerik -->
            </main>
        </div>
    </div>
    <footer>
        <!-- Footer içeriği burada yer alır -->
        <div class="container text-center py-3">
            <p>&copy; 2023 Admin Panel</p>
        </div>
    </footer>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>
